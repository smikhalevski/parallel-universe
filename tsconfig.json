{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "isolatedModules": true,
    "noUnusedLocals": true,
    "strict": true,
    "target": "ES6",
    "module": "ES6",
    "outDir": "./lib"
  },
  "include": [
    "./src/**/*"
  ]
}
