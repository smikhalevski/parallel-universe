{
  "name": "parallel-universe",
  "version": "2.0.0",
  "description": "The set of async flow control structures and promise utils.",
  "main": "./lib/index-cjs.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "sideEffects": false,
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rollup --config --configPlugin typescript",
    "clean": "rimraf './lib' './docs' './coverage'",
    "test": "jest --detectOpenHandles --forceExit",
    "docs:build": "typedoc './src/main/index.ts' && cp ./spaceman.png ./docs",
    "docs:release": "npm run docs:build && SHA=$(git rev-parse --short HEAD) && ORIGIN=$(git config --get remote.origin.url) && TEMP=$(mktemp -d) && FROM=$(pwd) && git clone -b ghpages --single-branch $ORIGIN $TEMP && cd $TEMP && ls -A | grep -wv .git | xargs rm -rf && cp -R $FROM/docs/ $TEMP && git add . && git commit -m \"Updated docs ($SHA)\" && git push && rm -rf $TEMP"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smikhalevski/parallel-universe.git"
  },
  "keywords": [
    "async",
    "promise",
    "repeat-until",
    "timeout",
    "sleep",
    "delay",
    "lock",
    "blocker",
    "executor",
    "queue",
    "async-queue",
    "concurrency",
    "parallel",
    "pool",
    "thread-pool",
    "work-pool",
    "pubsub"
  ],
  "author": "Savva Mikhalevski <smikhalevski@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smikhalevski/parallel-universe/issues"
  },
  "homepage": "https://github.com/smikhalevski/parallel-universe#readme",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jest": "^29.2.5",
    "jest": "^29.3.1",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.0",
    "rollup": "^3.10.0",
    "rollup-plugin-dts": "^5.1.1",
    "ts-jest": "^29.0.5",
    "tslib": "^2.4.1",
    "typedoc": "^0.23.24",
    "typescript": "^4.9.4"
  }
}
